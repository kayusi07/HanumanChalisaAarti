<LinearLayout 
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
     xmlns:android="http://schemas.android.com/apk/res/android">
 <ImageView
      android:id="@+id/imageView1N"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:src="@drawable/bg"
       android:background="@android:color/darker_gray"
      android:layout_weight="0.3" />
 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_weight="0.7"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:paddingBottom="@dimen/activity_vertical_margin"
   android:paddingLeft="@dimen/activity_horizontal_margin"
   android:paddingRight="@dimen/activity_horizontal_margin"
   android:paddingTop="@dimen/activity_vertical_margin"
   tools:context=".MainActivity"
   >

    
    
  
   
   
   <ImageButton
      android:id="@+id/imageButton3N"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:layout_marginBottom="14dp"
      android:onClick="forward"
      android:src="@android:drawable/ic_media_ff" />

   <ImageButton
      android:id="@+id/imageButton4N"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignTop="@+id/imageButton2N"
      android:layout_marginLeft="22dp"
      android:layout_toRightOf="@+id/imageButton2N"
      android:onClick="rewind"
      android:src="@android:drawable/ic_media_rew" />

   <ImageButton
      android:id="@+id/imageButton2N"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/imageButton1N"
      android:layout_marginLeft="14dp"
      android:layout_toRightOf="@+id/imageButton1N"
      android:onClick="pause"
      android:src="@android:drawable/ic_media_pause" />

   <ImageButton
      android:id="@+id/imageButton1N"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/imageButton3N"
      android:layout_marginLeft="24dp"
      android:layout_toRightOf="@+id/imageButton3N"
      android:onClick="play"
      android:src="@android:drawable/ic_media_play" />

   <SeekBar
      android:id="@+id/seekBar1N"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" 
      android:layout_above="@+id/imageButton3N"
      android:layout_toLeftOf="@+id/textView2N"
      android:layout_toRightOf="@+id/textView1N" />

   <TextView
      android:id="@+id/textView1N"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignRight="@+id/imageButton3N"
      android:layout_alignTop="@+id/seekBar1N"
      android:text="@string/inital_Time"
      android:textAppearance="?android:attr/textAppearanceSmall" />

   <TextView
      android:id="@+id/textView2N"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/imageButton4N"
      android:layout_alignTop="@+id/seekBar1N"
      android:text="@string/inital_Time"
      android:textAppearance="?android:attr/textAppearanceSmall" />

   

   
   

   

</RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hanumanJi.jai"
    android:versionCode="7"
    android:versionName="3.0">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="25" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/hanuman_ji_logo"
        android:label="@string/app_name_new"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.hanumanJi.jai.SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.hanumanJi.jai.MainActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name="com.hanumanJi.jai.NormalChalisa"
            android:label="Hanuman Chalisa"></activity>
        <activity
            android:name="com.hanumanJi.jai.Aarti"
            android:label="Hanuman Aarti"></activity>
        <activity
            android:name="com.hanumanJi.hanumanChalisa.HanumanChalisaActivity"
            android:label="Hanuman Chalisa"></activity>
        <activity
            android:name="com.hanumanJi.hanumanChalisa.HClyrics"
            android:label="Hanuman Chalisa Lyrics"></activity>
        <activity
            android:name=".AartiLyrics"
            android:label="Hanuman Aarti Lyrics"></activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>